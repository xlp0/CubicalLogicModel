---
import Layout from '../../../../layouts/Layout.astro';
import AuthCallback from '../../../../components/AuthCallback';
---

<Layout title="Authentication Callback">
  <div class="min-h-screen bg-gray-900 text-gray-100 flex items-center justify-center">
    <div class="text-center">
      <h1 class="text-2xl font-bold mb-4">Authenticating...</h1>
      <p class="text-gray-400">Please wait while we complete the authentication process.</p>
      <AuthCallback client:only="react" />
    </div>
  </div>
</Layout>
