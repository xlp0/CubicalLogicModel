---
import SplitViewLayout from '../layouts/SplitViewLayout.astro';

const panes = [
  {
    importPath: "TreeView",
    width: "250px",
    minWidth: "200px",
    flex: 0,
    componentProps: {
      title: "Project Explorer"
    }
  },
  {
    width: "auto",
    minWidth: "400px",
    flex: 2,
    split: {
      direction: 'horizontal',
      sizes: [50, 50],
      panes: [
        {
          importPath: "ThreeJsCube",
          minWidth: "300px",
          componentProps: {
            title: "3D View Top"
          }
        },
        {
          importPath: "ThreeJsCube",
          minWidth: "300px",
          componentProps: {
            title: "3D View Bottom"
          }
        }
      ]
    }
  },
  {
    importPath: "YouTubePlayer",
    width: "400px",
    minWidth: "300px",
    flex: 1,
    componentProps: {
      title: "Tutorial",
      videoId: "LWQqE2JcDSQ"
    }
  }
];
---

<SplitViewLayout 
  title="Split View" 
  panes={panes}
/>
