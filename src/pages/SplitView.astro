---
import SplitLayout from '../components/SplitLayout';
import ResizeHandler from '../components/ResizeHandler';

const defaultComponent = "Notes";

const panes = [
  {
    importPath: "SearchableCardSelector",
    width: "250px",
    minWidth: "200px",
    componentProps: {
      title: "Component Library"
    }
  },
  {
    width: "calc(100% - 650px)",
    minWidth: "400px",
    split: {
      direction: 'horizontal',
      sizes: [1, 1],
      panes: [
        {
          importPath: defaultComponent,
          minWidth: "300px",
          componentProps: {
            title: defaultComponent
          }
        },
        {
          importPath: "ThreeJsCube",
          minWidth: "300px",
          componentProps: {
            title: "3D View Bottom"
          }
        }
      ]
    }
  },
  {
    importPath: "YouTubePlayer",
    width: "400px",
    minWidth: "300px",
    componentProps: {
      title: "Tutorial",
      videoId: "LWQqE2JcDSQ"
    }
  }
];
---

<div class="h-screen bg-gray-900">
  <SplitLayout client:only="react" panes={panes} />
  <ResizeHandler 
    client:only="react" 
    resizerWidth={5}
    resizerColor="#2a2a2a"
    resizingColor="#00ffff"
  />
</div>

<style>
  :global(.split-container) {
    display: flex;
    width: 100%;
    height: 100vh;
    overflow: hidden;
    background: #1a1a1a;
  }

  :global(.pane) {
    position: relative;
    height: 100%;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  :global(.pane-content) {
    position: relative;
    flex: 1;
    min-height: 0;
    display: flex;
    overflow: hidden;
  }

  :global(.split-pane) {
    display: flex;
    width: 100%;
    height: 100%;
  }

  :global(.split-pane.vertical) {
    flex-direction: row;
  }

  :global(.split-pane.horizontal) {
    flex-direction: column;
  }

  :global(.split-pane-child) {
    position: relative;
    display: flex;
    flex-direction: column;
    min-height: 0;
    min-width: 0;
  }

  :global(.split-pane.vertical > .split-pane-child) {
    height: 100%;
  }

  :global(.split-pane.horizontal > .split-pane-child) {
    width: 100%;
  }

  :global(.resizer) {
    background: var(--resizer-color);
    transition: all 0.2s ease;
    z-index: 10;
    flex: none;
    position: relative;
  }

  :global(.resizer.vertical) {
    cursor: col-resize;
    width: var(--resizer-width, 3px);
    height: 100%;
  }

  :global(.resizer.horizontal) {
    cursor: row-resize;
    height: var(--resizer-width, 3px);
    width: 100%;
  }

  :global(.resizer:hover) {
    background: var(--resizing-color);
  }

  :global(.resizer.vertical:hover) {
    width: var(--resizer-hover-width, 7px);
    margin: 0 var(--resizer-hit-margin, -5px);
  }

  :global(.resizer.horizontal:hover) {
    height: var(--resizer-hover-width, 7px);
    margin: var(--resizer-hit-margin, -5px) 0;
  }

  :global(.resizer::after) {
    content: "";
    position: absolute;
    top: 0;
    left: var(--resizer-hit-margin, -5px);
    right: var(--resizer-hit-margin, -5px);
    bottom: 0;
    cursor: inherit;
  }

  :global(.resizer-handle) {
    position: absolute;
    background: var(--resizing-color);
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  :global(.resizer.vertical .resizer-handle) {
    width: 2px;
    height: 40px;
  }

  :global(.resizer.horizontal .resizer-handle) {
    width: 40px;
    height: 2px;
  }

  :global(.resizer:hover .resizer-handle) {
    opacity: 1;
  }
</style>
