---
import Layout from '../layouts/Layout.astro';
import FloatingNav from '../components/FloatingNav';
import WebPageCube from '../components/CardContent/WebPageCube/WebPageCube';
import Dashboard from '../components/CardContent/Dashboard';

---

<Layout title="Cubical Logic Model">
  <main class="relative h-screen w-screen bg-gray-900 text-gray-100 overflow-hidden">
    <FloatingNav client:only="react" />
    <div class="h-full flex">
      <div class="flex-1">
        <div class="h-full" id="webPageCube">
          <WebPageCube client:only="react" />
        </div>
      </div>
      <div class="flex-1">
        <div class="h-full" id="dashboard">
          <Dashboard client:only="react" />
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  #webPageCube, #dashboard {
    height: 100%;
    overflow: hidden;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // No changes made to the script section
  });
</script>
