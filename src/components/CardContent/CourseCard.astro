---
interface Props {
  title: string;
  description: string;
  icon: string;
  link: string;
  featured?: boolean;
  coming?: boolean;
}

const { title, description, icon, link, featured = false, coming = false } = Astro.props;
---

<div class="bg-white rounded-xl shadow-lg overflow-hidden transform hover:-translate-y-1 transition-all duration-200">
  <div class="aspect-w-16 aspect-h-9 bg-gray-100">
    <div class="w-full h-48" set:html={icon} />
  </div>
  <div class="p-6">
    <div class="flex items-center justify-between mb-2">
      <h3 class="text-xl font-semibold text-gray-900">
        {title}
      </h3>
      {featured && (
        <span class="px-2 py-1 text-xs font-medium text-blue-700 bg-blue-100 rounded-full">
          Featured
        </span>
      )}
      {coming && (
        <span class="px-2 py-1 text-xs font-medium text-gray-700 bg-gray-100 rounded-full">
          Coming Soon
        </span>
      )}
    </div>
    <p class="text-gray-600 mb-4">
      {description}
    </p>
    <a
      href={link}
      class={`inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md 
        ${featured 
          ? 'text-white bg-blue-600 hover:bg-blue-700' 
          : 'text-gray-700 bg-gray-100 hover:bg-gray-200'}`}
    >
      {featured ? 'Get Started' : 'Learn More'}
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </a>
  </div>
</div>
