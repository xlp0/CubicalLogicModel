---
import CourseCard from '../CardContent/CourseCard.astro';
import { readSvgFile } from '../../utils/svg';
import coursesData from '../../data/courses.json';

const courses = await Promise.all(
  coursesData.courses.map(async (course) => ({
    ...course,
    icon: await readSvgFile(course.iconFile)
  }))
);
---

<section id="courses" class="py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">
        Available Courses
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Start your journey into logical reasoning with our interactive courses
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {courses.map(course => (
        <CourseCard {...course} />
      ))}
    </div>
  </div>
</section>
